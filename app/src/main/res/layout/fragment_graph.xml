<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_graph_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.frezzcoding.savingsguru.customviews.LineGraph
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/line_graph"
            />

        <TextView
            android:id="@+id/tv_initial_investment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_graph"
            style="@style/H3"
            android:text="@string/initial_investment_amount"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_initial_investment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/OutlinedBox.Colorful"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_initial_investment"
            app:startIconDrawable="@drawable/ic_money">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/et_initial_investment"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_interest_rate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_initial_investment"
            style="@style/H3"
            android:text="@string/interest_rate"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_interest_rate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            style="@style/OutlinedBox.Colorful"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_interest_rate"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/et_interest_rate"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/H3"
            android:textStyle="bold"
            android:id="@+id/tv_select_interest_interval"
            android:textColor="@color/blue"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/til_interest_rate"
            app:layout_constraintBottom_toBottomOf="@id/til_interest_rate"
            android:text="@string/select_interval"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_regular_deposits"
            android:text="@string/regular_deposits"
            app:layout_constraintTop_toBottomOf="@id/til_interest_rate"
            style="@style/H3"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_regular_deposits"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/OutlinedBox.Colorful"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_regular_deposits"
            app:startIconDrawable="@drawable/ic_money">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/et_regular_deposits"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/H3"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.8"
            android:textColor="@color/blue"
            android:id="@+id/tv_select_deposits_interval"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/til_regular_deposits"
            app:layout_constraintBottom_toBottomOf="@id/til_regular_deposits"
            android:text="@string/select_interval"
            />

        <Button
            android:id="@+id/btn_calcualte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_regular_deposits"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:text="@string/calculate"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

